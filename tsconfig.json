{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution":"node",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": [
    "node_modules/hap-nodejs/@types/",
    "homebridge-ui",
    "src/**/*.ts"
  ],
  "exclude": ["src/fakeserver/**.*", "src/**/*.test.ts", "eslint.config.mjs"],
  "files": ["src/index.ts"]
}